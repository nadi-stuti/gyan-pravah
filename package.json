{
  "name": "gyan-pravah",
  "version": "1.0.0",
  "private": true,
  "description": "Gyan Pravah - Hindu Knowledge Quiz Platform",
  "scripts": {
    "dev": "pnpm --parallel run dev",
    "build": "pnpm --recursive run build",
    "start": "pnpm --parallel run start",
    "lint": "pnpm --recursive run lint",
    "clean": "pnpm --recursive run clean",
    "populate": "pnpm --filter scripts run populate",
    "populate:clear": "pnpm --filter scripts run populate:clear"
  },
  "workspaces": [
    "app",
    "cms",
    "scripts",
    "packages/*"
  ],
  "devDependencies": {
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}